@{ ViewData["Title"] = "Index"; }

@model List<Cliente>

<a asp-action="Create">Crear Nuevo</a>

<h1>
    Clientes:
</h1>

<table id="tabla" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Telefono</th>
        <th>Correo</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var e in Model)
    {
        <tr>
            <td>@e.Nombre</td>
            <td>@e.Direccion</td>
            <td>@e.Telefono</td>
            <td>@e.Correo</td>
            <td>
                <a asp-action="Details" asp-route-id="@e.Id">Detalles</a> |
                <a asp-action="Edit" asp-route-id="@e.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@e.Id"
                 onclick="return confirm('¿Está seguro que desea eliminar esto?');">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>